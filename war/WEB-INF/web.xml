<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>mondai</servlet-name>
		<servlet-class>kakomon3.Kakomon3Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>mondai</servlet-name>
		<url-pattern>/admin/mondai</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>tag</servlet-name>
		<servlet-class>kakomon3.Kakomon3TagServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>tag</servlet-name>
		<url-pattern>/admin/tag</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Kakomon3Init</servlet-name>
		<servlet-class>kakomon3.Kakomon3InitServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Kakomon3Init</servlet-name>
		<url-pattern>/admin/init</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>QuizList</servlet-name>
		<servlet-class>kakomon3.quiz.KakomonQuizListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>QuizList</servlet-name>
		<url-pattern>/quiz/list</url-pattern>
	</servlet-mapping>



	<filter>
		<filter-name>admincheck</filter-name>
		<filter-class>kakomon3.filter.AdminCheckFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>admincheck</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>logincheck</filter-name>
		<filter-class>kakomon3.filter.LoginCheckFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>logincheck</filter-name>
		<url-pattern>/quiz/*</url-pattern>
	</filter-mapping>


	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>kakomon3.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
